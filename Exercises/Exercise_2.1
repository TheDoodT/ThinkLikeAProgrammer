using namespace std;

//  Think like a programmer Exercise 2.1:
// Output:
/*
		
		########
		 ######
		  ####
		   ##
*/

int main() {

	for (int hashMark = 0; hashMark < 4; hashMark++) {

		for (int space = 0; space <= (hashMark - 1); space++) {
			cout << " ";
		}

		// goes from 8 to 6,4,2 hashmarks
		for (int row = 0; row < (8-hashMark*2); row++) {
			cout << "#";
		}
		cout << "\n";
	}

	cout << "\n";

	
	getchar();
	return 0;
}
